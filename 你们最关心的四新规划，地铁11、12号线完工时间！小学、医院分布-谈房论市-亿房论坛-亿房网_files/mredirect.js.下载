function mobile_device_detect(a){for(var b=navigator.platform,c=new Array("iPhone","iPod","iPad","android","Nokia","SymbianOS","Symbian","Windows Phone","Phone","Linux armv71","MAUI","UNTRUSTED/1.0","Windows CE","BlackBerry","IEMobile"),d=0;d<c.length;d++)b.match(c[d])&&(window.location.href=a);-1!=navigator.platform.indexOf("iPad")&&(window.location.href=a);var e=navigator.appVersion;e.match(/linux/i)&&(e.match(/mobile/i)||e.match(/X11/i))&&(window.location.href=a)}var url=window.location.href.replace("http://","").split("#")[0],anchor=window.location.href.split("#")[1],urlliststr=url.split("?")[1],urlnew,formaturl=function(a,b){var c={},d=Math.ceil(a/2);if(c.page=d,b){var e,f=b.replace(/[^0-9]/gi,"");e=a%2==0?10*(a%2+1)+parseInt(f):f,c.anchor=e}return c},replaceurl=function(a,b){var c,d,e,f,g=a.split("/")[0].split(".")[0];if("test"==g?c="test.m.sns.fdc.com.cn":"sns"==g?c="sns.m.test.fdc.com.cn":"presns"==g?c="sns.m.fdc.com.cn":"bbs"==g&&(c="bbs.m.fdc.com.cn"),2==a.split("?")[0].split("/").length&&0!=a.split("?")[0].split("/")[1].length){var h=a.split("/")[1].replace(".html",""),i=h.split("-")[2],j=formaturl(i,b);"forum"==h.split("-")[0]?(d=h.split("-")[1],f=c+"/forum-"+d+"-"+j.page+".html"):"thread"==h.split("-")[0]&&(e=h.split("-")[1],f=j.anchor?j.anchor.length>2?c+"/thread-"+e+"-"+j.page+"-1.html#"+j.anchor:c+"/thread-"+e+"-"+j.page+"-1.html#postcontent"+j.anchor:c+"/thread-"+e+"-"+j.page+"-1.html")}else f=c;return"http://"+f};if(urlliststr){for(var urllist=urlliststr.split("&"),urlobj={},i=0;i<urllist.length;i++)urlobj[urllist[i].split("=")[0]]=urllist[i].split("=")[1];"m"!=urlobj.from&&-1==url.split("?")[0].indexOf("post")&&(urlnew=replaceurl(url,anchor),mobile_device_detect(urlnew))}else urlnew=replaceurl(url,anchor),mobile_device_detect(urlnew);