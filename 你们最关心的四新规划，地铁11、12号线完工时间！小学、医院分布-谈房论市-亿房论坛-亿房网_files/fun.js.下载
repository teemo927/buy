var showDom={clickBtn:function(a,b,c){var d=this;a.on("click",function(e){e.stopPropagation(),c?c():"none"!=b.css("display")?(b.stop(),d.dom.hide(a,b)):(b.stop(),d.dom.show(a,b))})},hoverBtn:function(a,b,c,d){var e=this;a.on("mouseenter",function(){c?c():(b.stop(),e.dom.show(a,b))}).on("mouseleave",function(){d?d():(b.stop(),e.dom.hide(a,b))})},dom:{hide:function(a,b){var c=a.find("i"),d=c.attr("class");d&&(d=d.replace(/up/,"down"),c.attr("class",d)),b.slideUp()},show:function(a,b){var c=a.find("i"),d=c.attr("class");d&&(d=d.replace(/down/i,"up"),c.attr("class",d)),b.slideDown()}}};